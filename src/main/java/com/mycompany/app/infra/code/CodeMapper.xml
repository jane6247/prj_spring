<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.mycompany.app.infra.code.CodeMapper">
 
    <resultMap id="resultMapObj" type="com.mycompany.app.infra.code.Code"></resultMap>
    
    <sql id="code">
    	seq
    	,name
    	,codeGroup_seq
    </sql>
    
   	<select id="selectList" resultMap="resultMapObj">
   		SELECT
			<include refid="code" />
   		FROM
   			code
		WHERE 1=1
			<if test="shKeyword != null and !shKeyword.equals('')">AND name LIKE CONCAT('%',#{shKeyword},'%')</if>		
   	</select>
   	
   	<select id="selectOne" resultMap="resultMapObj">
   		SELECT
			<include refid="code" />
   		FROM
   			code
		WHERE 1=1
			AND seq = #{seq}	
   	</select>   	
   	
   	<update id="update">
   		UPDATE code
   		SET
   			name = #{name}
		WHERE
			seq = #{seq}	
   	</update>   	
   	
   	<delete id="delete">
   		delete from code WHERE seq = #{seq}	
   	</delete>   	
   	 
   	<update id="uelete">
   		UPDATE code
   		SET
   			codeGroup_seq= 1
		WHERE
			seq = #{seq}	
   	</update>   	
   	
   	<insert id="insert">
   		INSERT INTO code (
   			seq
   			,name
   			,codeGroup_seq
   		) values (
   		    #{seq}
   		   ,#{name}
   			,#{codeGroup_seq}
   		)
   	</insert>   	

</mapper>